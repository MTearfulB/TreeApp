<div class="align-content-center mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
    @using (Html.BeginForm("EditPost", "Home", FormMethod.Post))
    {
        <h10>Name of the edited branch:</h10>
        <br />
        <select id="Id" name="Id" required>
            <option value=""> -- Wybierz --</option>
            @foreach (var branch in Model)
            {
                <option value="@branch.Id">@branch.Id</option>
            }
        </select>
        <br />
        <h01>New name of the branch:</h01>
        <input type="text" name="newName" id="newName" required>
        <br />
        <h01>Id of a new Parent:</h01>
        <br />
        <select id="newParentId" name="newParentId">
            <option value=""> -- Wybierz --</option>
            @foreach (var branch in Model)
            {   
                <option value="@branch.Id">@branch.Id</option>
            }
        </select>
        <br /><br />
        <input class="btn btn-primary mt-10" type="submit" value="Submit" />
    }
</div>
